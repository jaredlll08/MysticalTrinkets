package com.jared.mysticaltrinkets.proxies;

import com.jared.mysticaltrinkets.ModInfo;
import com.jared.mysticaltrinkets.client.render.block.RenderFireFlower;
import com.jared.mysticaltrinkets.client.render.block.RenderFlower;
import com.jared.mysticaltrinkets.client.render.block.RenderMEM;
import com.jared.mysticaltrinkets.client.render.block.RenderShard;
import com.jared.mysticaltrinkets.tileentities.TileEntityFireFlower;
import com.jared.mysticaltrinkets.tileentities.TileEntityMEM;

import cpw.mods.fml.client.registry.ClientRegistry;
import cpw.mods.fml.client.registry.RenderingRegistry;

public class ClientProxy extends CommonProxy {

	@Override
	public void registerRenderers() {

		RenderShard shardRenderer = new RenderShard();
		RenderFireFlower fireFlowerRenderer = new RenderFireFlower();
//		ModInfo.fireFlowerRenderID = RenderingRegistry.getNextAvailableRenderId();
		ModInfo.memID = RenderingRegistry.getNextAvailableRenderId();

		RenderMEM memRenderer = new RenderMEM();
		ClientRegistry.registerTileEntity(TileEntityMEM.class, "MEMID", memRenderer);
		ClientRegistry.bindTileEntitySpecialRenderer(TileEntityMEM.class, memRenderer);

	}

	@Override
	public int registerArmorRenderPrefix() {
		return RenderingRegistry.addNewArmourRendererPrefix("mystical");
	}
}