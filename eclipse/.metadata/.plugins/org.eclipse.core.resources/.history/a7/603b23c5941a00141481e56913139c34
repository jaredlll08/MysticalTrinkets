package com.jared.mysticaltrinkets.blocks.energy;

import java.util.Iterator;
import java.util.List;

import net.minecraft.block.BlockContainer;
import net.minecraft.block.material.Material;
import net.minecraft.entity.player.EntityPlayer;
import net.minecraft.tileentity.TileEntity;
import net.minecraft.util.ChatComponentText;
import net.minecraft.util.ChatStyle;
import net.minecraft.util.IChatComponent;
import net.minecraft.world.World;
import net.minecraftforge.common.util.ForgeDirection;
import cofh.api.energy.IEnergyConnection;

import com.jared.mysticaltrinkets.ModInfo;
import com.jared.mysticaltrinkets.tileentities.TileEntityMEM;

public class BlockMEM extends BlockContainer implements IEnergyConnection{

	public BlockMEM() {
		super(Material.iron);
		this.setBlockTextureName(ModInfo.modid + ":Mystical_Forge");
	}

	public void onBlockClicked(World world, int x, int y, int z, EntityPlayer player){
		TileEntityMEM mem = (TileEntityMEM)world.getTileEntity(x, y, z);
		player.addChatComponentMessage(new ChatComponentText(String.valueOf(mem.getEnergyStored(ForgeDirection.UP))));
		
	}
	
	public boolean isBlockNormalCube() {
		return false;
	}
	public boolean renderAsNormalBlock() {
		return false;
	}

	public boolean isOpaqueCube() {
		return false;
	}

	public int getRenderType() {
		return ModInfo.memID;
	}

	@Override
	public TileEntity createNewTileEntity(World var1, int var2) {
		return new TileEntityMEM();
	}

	@Override
	public boolean canConnectEnergy(ForgeDirection from) {
		return true;
	}

}
